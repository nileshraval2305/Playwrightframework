{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "rootDir": "./",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "compileOnSave": true,
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}